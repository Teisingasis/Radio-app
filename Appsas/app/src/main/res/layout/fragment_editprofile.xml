<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:padding="10dp"
    android:gravity="center_horizontal"
    android:layout_gravity="center_vertical|center_horizontal"
    android:id="@+id/editprofileparent">

    <RelativeLayout
        android:layout_gravity="center_horizontal|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/rect"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_gravity="top"
            android:background="@drawable/backroundhalf"
            android:fadingEdge="vertical|horizontal"/>
        <ImageView
            android:id="@+id/circ"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/rect"
            android:layout_marginTop="-70dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_circle"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_face"
            android:tint="@color/AlmostWhite"/>
    </RelativeLayout>



    <EditText
        android:id="@+id/edit_username"
        android:backgroundTint="@color/colorButtonA"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_login"
        android:layout_marginLeft="5dp"
        android:drawablePadding="5dp"
        android:hint="Username"
        android:padding="10dp"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="#F7F6F6"
        android:textColorHighlight="#86D5AC"
        android:textColorHint="@color/LightGreyText"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/edit_fullname"
        android:backgroundTint="@color/colorButtonA"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_acc"
        android:layout_marginLeft="5dp"
        android:drawablePadding="5dp"
        android:hint="Full name"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#F7F6F6"
        android:textColorHighlight="#86D5AC"
        android:textColorHint="@color/LightGreyText"
        android:textSize="18dp"/>

<LinearLayout
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <TextView
        android:id="@+id/edit_gender"
        android:backgroundTint="@color/colorButtonA"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_gender"
        android:layout_marginLeft="5dp"
        android:drawablePadding="5dp"
        android:hint="Gender"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#F7F6F6"
        android:textColorHighlight="#86D5AC"
        android:textColorHint="@color/LightGreyText"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/btnEditGender"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton3"
        android:text="Change"
        android:textAllCaps="false"
        android:textColor="@color/LightGreyText"
        android:includeFontPadding="true"
        android:textSize="15dp" />

</LinearLayout>

    <Button
        android:id="@+id/btnSaveEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="#ea4c88"
        android:text="Save" />
    <Button
        android:id="@+id/btnCancelEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:textColor="@color/LightGreyText"
        android:background="@drawable/roundbutton3"
        android:text="Cancel" />


</LinearLayout>