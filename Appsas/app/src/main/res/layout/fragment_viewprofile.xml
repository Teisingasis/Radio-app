<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:padding="10dp"
    android:gravity="center_horizontal"
    android:layout_gravity="center_vertical|center_horizontal">


    <RelativeLayout
        android:layout_gravity="center_horizontal|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/rect"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_gravity="top"
            android:background="@drawable/backroundhalf"
            android:fadingEdge="vertical|horizontal"/>
        <ImageView
            android:id="@+id/circ"
        android:layout_width="200dp"
        android:layout_height="200dp"
            android:layout_below="@id/rect"
            android:layout_marginTop="-70dp"
            android:layout_centerHorizontal="true"
        android:background="@drawable/ic_circle"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_face"
            android:tint="@color/AlmostWhite"/>
    </RelativeLayout>

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/view_username"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_login"
        android:layout_marginLeft="5dp"
        android:drawablePadding="5dp"
        android:hint="Username: none"
        android:padding="10dp"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="@color/LightGreyText"
        android:textColorHighlight="#86D5AC"
        android:textColorHint="@color/LightGreyText"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/view_fullname"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/ic_acc"
        android:drawablePadding="5dp"
        android:paddingLeft="5dp"
        android:hint="Full name: none"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/LightGreyText"
        android:textColorHighlight="#86D5AC"
        android:textColorHint="@color/LightGreyText"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/view_gender"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:paddingLeft="5dp"
        android:hint="Gender: none"
        android:drawableLeft="@drawable/ic_gender"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:singleLine="true"
        android:inputType="textCapWords"
        android:textColor="@color/LightGreyText"
        android:textColorHighlight = "#86D5AC"
        android:textSize="18dp"
        android:textColorHint = "@color/LightGreyText"/>
<!--<RelativeLayout-->
