<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/rect"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_gravity="top"
            android:background="@drawable/backroundhalf"
            android:fadingEdge="vertical|horizontal"/>
        <ImageView
            android:id="@+id/circ"
        android:layout_width="200dp"
        android:layout_height="200dp"
            android:layout_below="@id/rect"
            android:layout_marginTop="-70dp"
            android:layout_centerHorizontal="true"
        android:background="@drawable/ic_circle"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_face"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/view_username"
        android:layout_width="370dp"
        android:layout_height="43dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_login"
        android:drawablePadding="5dp"
        android:hint="Username: none"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/LightGreyText"
        android:textColorHighlight="#7CB342"
        android:textColorHint="@color/LightGreyText"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/view_fullname"
        android:layout_width="370dp"
        android:layout_height="43dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_acc"
        android:drawablePadding="5dp"
        android:hint="Full name: none"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/LightGreyText"
        android:textColorHighlight="#7CB342"
        android:textColorHint="#C1AEB4AB"
        android:textSize="18dp" />
    <TextView
    android:id="@+id/view_gender"
    android:layout_width="370dp"
    android:layout_height="43dp"
    android:layout_marginBottom="10dp"
    android:hint="Gender: none"
    android:padding="10dp"
    android:singleLine="true"
    android:inputType="textCapWords"
    android:textColorHighlight = "#ff7eff15"
    android:textColorHint = "@color/LightGreyText"/>
<!--<RelativeLayout-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content">-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button

        android:id="@+id/btnChangePassword"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/roundbutton2"
        android:text="Change Password" />
    <Button
        android:id="@+id/btnEditProfile"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/roundbutton2"
        android:text="Edit Profile" />
</LinearLayout>
<!--</RelativeLayout>-->
</LinearLayout>