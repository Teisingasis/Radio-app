<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343C3D"
    android:paddingLeft="20dp"
    android:paddingTop="10sp"
    android:paddingRight="20dp"
    android:paddingBottom="10dp"
    tools:context=".MainActivity"
    >

    <EditText
        android:id="@+id/login"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_below="@id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@android:color/transparent"
        android:cursorVisible="true"
        android:drawableLeft="@drawable/ic_login"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#F7F6F6"
        android:textColorHighlight="#B2E47F"
        android:textColorHint="#C1ABB4B4"
        android:textColorLink="#86D5AC"
        android:textCursorDrawable="@drawable/cursor"
         />
    <View
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/login"
        android:background="@color/colorButtonA"
        />

    <EditText
        android:id="@+id/passwd"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:cursorVisible="true"
        android:drawableStart="@drawable/ic_password"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#F7F6F6"
        android:textColorHighlight="#B2E47F"
        android:textColorHint="#C1ABB4B4"
        android:textColorLink="#86D5AC"
        android:textCursorDrawable="@drawable/cursor" />
    <View
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/passwd"
        android:background="@color/colorButtonA"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@+id/passwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/roundbutton2"
        android:fontFamily="sans-serif-medium"

        android:text="Login"
        android:textAllCaps="true"
        android:textColor="#232727"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundbutton3"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/colorPrimaryA"
        android:text="Sign up"
        android:textAllCaps="true"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/final123" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/button2"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwd"
        android:layout_marginTop="0.5dp"
        android:layout_alignRight="@id/passwd"
        android:background="@android:color/transparent"
        android:text="Forgot password?"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryA" />



</RelativeLayout>